<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_36"
        android:adjustViewBounds="true"
        android:src="@drawable/wavy_line" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_36"
        android:text="Register Your Account"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_18"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_12"
        android:src="@drawable/register_4" />
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/layout_previous"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_marginStart="@dimen/dp_120"
        android:layout_marginEnd="@dimen/dp_120"
        android:paddingBottom="@dimen/dp_8"
        android:paddingTop="@dimen/dp_8"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_24"
        android:background="@drawable/btn_shape_transparent"
        app:layout_constraintEnd_toEndOf="@+id/rv_country"
        app:layout_constraintStart_toStartOf="@+id/rv_country"
        app:layout_constraintTop_toBottomOf="@+id/rv_country" >
        <TextView
            android:textSize="@dimen/sp_10"
            android:text="PREVIOUS STEP"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </LinearLayout>


    <EditText
        android:id="@+id/et_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_36"
        android:layout_marginTop="@dimen/dp_36"
        android:layout_marginEnd="@dimen/dp_36"
        android:background="@null"
        android:hint="Please Input Your Name"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textColorHint="@color/textGrey"
        android:textSize="@dimen/sp_14"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="@dimen/dp_36"
        android:layout_marginTop="@dimen/dp_4"
        android:layout_marginEnd="@dimen/dp_36"
        android:background="@color/white" />

    <TextView
        android:id="@+id/tv_age"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_36"
        android:layout_marginTop="@dimen/dp_36"
        android:layout_marginEnd="@dimen/dp_36"
        android:background="@null"
        android:hint="Please Select Your Birthday"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textColorHint="@color/textGrey"
        android:textSize="@dimen/sp_14"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="@dimen/dp_36"
        android:layout_marginTop="@dimen/dp_4"
        android:layout_marginEnd="@dimen/dp_36"
        android:background="@color/white" />

    <EditText
        android:id="@+id/et_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_36"
        android:layout_marginTop="@dimen/dp_36"
        android:layout_marginEnd="@dimen/dp_36"
        android:background="@null"
        android:hint="Please Input Your Password"
        android:inputType="textPassword"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textColorHint="@color/textGrey"
        android:textSize="@dimen/sp_14"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="@dimen/dp_36"
        android:layout_marginTop="@dimen/dp_4"
        android:layout_marginEnd="@dimen/dp_36"
        android:background="@color/white" />

    <EditText
        android:id="@+id/et_re_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_36"
        android:layout_marginTop="@dimen/dp_36"
        android:layout_marginEnd="@dimen/dp_36"
        android:background="@null"
        android:hint="Please Confirm Password"
        android:inputType="textPassword"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textColorHint="@color/textGrey"
        android:textSize="@dimen/sp_14"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="@dimen/dp_36"
        android:layout_marginTop="@dimen/dp_4"
        android:layout_marginEnd="@dimen/dp_36"
        android:background="@color/white" />

    <RadioGroup
        android:id="@+id/rg_sex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_36"
        android:layout_marginTop="@dimen/dp_36"
        android:layout_marginEnd="@dimen/dp_36"
        android:checkedButton="@id/rb_1"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5">

        <RadioButton
            android:id="@+id/rb_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@drawable/bg_radiobutton"
            android:paddingStart="@dimen/dp_8"
            android:paddingEnd="@dimen/dp_2"
            android:text="Male"
            android:textColor="@color/white" />

        <RadioButton
            android:id="@+id/rb_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@drawable/bg_radiobutton"
            android:paddingStart="@dimen/dp_8"
            android:paddingEnd="@dimen/dp_2"
            android:text="Female"
            android:textColor="@color/white" />

        <RadioButton
            android:id="@+id/rb_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@drawable/bg_radiobutton"
            android:paddingStart="@dimen/dp_8"
            android:paddingEnd="@dimen/dp_2"
            android:text="Other"
            android:textColor="@color/white" />
    </RadioGroup>

    <TextView
        android:id="@+id/tv_ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_36"
        android:layout_marginTop="@dimen/dp_36"
        android:layout_marginEnd="@dimen/dp_36"
        android:background="@drawable/btn_shape"
        android:gravity="center"
        android:paddingTop="@dimen/dp_8"
        android:paddingBottom="@dimen/dp_8"
        android:text="Register"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_18" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_36"
        android:adjustViewBounds="true"
        android:src="@drawable/wavy_line" />
</LinearLayout>