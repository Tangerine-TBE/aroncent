<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_marginStart="@dimen/dp_24"
        android:layout_marginEnd="@dimen/dp_100"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@drawable/history_left_bg"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/item_history_content"
            android:layout_width="wrap_content"
            android:text="Hello, Sally"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/white"
            android:layout_marginStart="@dimen/dp_4"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_height="wrap_content"/>
        <EditText
            android:imeOptions="actionDone"
            android:singleLine="true"
            android:id="@+id/item_edit_info"
            android:layout_width="match_parent"
            android:text=""
            android:textSize="@dimen/sp_16"
            android:backgroundTint="@color/white"
            android:textColor="@color/white"
            android:layout_marginStart="@dimen/dp_4"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/item_history_time"
            android:layout_width="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_11"
            android:layout_gravity="end"
            android:layout_marginEnd="@dimen/dp_4"
            android:layout_marginTop="@dimen/dp_6"
            android:text="Today at 10:30 AM   [Unread]"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <TextView
        android:id="@+id/item_history_code"
        android:layout_marginStart="@dimen/dp_24"
        android:layout_width="match_parent"
        android:layout_marginEnd="@dimen/dp_100"
        android:textSize="@dimen/sp_14"
        tools:text=".-.-.-"
        android:textColor="#C3A9EA"
        android:layout_height="wrap_content"/>
</LinearLayout>