<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/app_bg"
    android:layout_height="match_parent"
    tools:context=".module.main.MainActivity">

    <FrameLayout
        android:id="@+id/view_stub_main"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavigationBar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:background="#5F5BD8"
        android:id="@+id/bottomNavigationBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <LinearLayout
            android:id="@+id/LL_tab_1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingTop="@dimen/dp_12"
            android:paddingBottom="@dimen/dp_12"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_main_tab_1"
                android:layout_marginTop="@dimen/dp_4"
                android:layout_width="@dimen/dp_36"
                android:src="@drawable/tab_home"
                android:adjustViewBounds="true"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_tab_1"
                android:layout_width="wrap_content"
                android:textSize="@dimen/sp_10"
                android:textColor="@color/tabTextNormal"
                android:text="HOME"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/LL_tab_2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingTop="@dimen/dp_12"
            android:paddingBottom="@dimen/dp_12"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_main_tab_2"
                android:layout_marginTop="@dimen/dp_4"
                android:layout_width="@dimen/dp_36"
                android:src="@drawable/tab_history"
                android:adjustViewBounds="true"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_tab_2"
                android:layout_width="wrap_content"
                android:textSize="@dimen/sp_10"
                android:textColor="@color/tabTextNormal"
                android:text="HISTORY"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/LL_tab_3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingTop="@dimen/dp_12"
            android:paddingBottom="@dimen/dp_12"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_main_tab_3"
                android:layout_marginTop="@dimen/dp_4"
                android:layout_width="@dimen/dp_36"
                android:src="@drawable/tab_my"
                android:adjustViewBounds="true"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_tab_3"
                android:layout_width="wrap_content"
                android:textSize="@dimen/sp_10"
                android:textColor="@color/tabTextNormal"
                android:text="ME"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>