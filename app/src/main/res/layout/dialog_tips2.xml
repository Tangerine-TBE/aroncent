<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginStart="@dimen/dp_24"
    android:layout_marginEnd="@dimen/dp_24"
    android:background="@drawable/dialog_bg"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/layout_scroll"
        android:layout_width="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_marginEnd="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView8"
        android:layout_height="@dimen/dp_200">
        <TextView
            android:id="@+id/tv_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            tools:text="No device currently, please connect Bluetooth device"
            android:textColor="@color/textCountry"
            android:textSize="@dimen/sp_16"
            />
    </ScrollView>





    <ImageView
        android:layout_marginTop="@dimen/dp_12"
        android:id="@+id/imageView8"
        android:layout_width="@dimen/dp_64"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bar_icon" />
    <CheckBox
        android:text="I agree with that "
        android:id="@+id/cb_check"
        app:layout_constraintBottom_toTopOf="@id/tv_cancel"
        app:layout_constraintStart_toStartOf="@id/tv_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="@dimen/dp_100"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="@dimen/dp_12"
        android:gravity="center"
        android:paddingTop="@dimen/dp_4"
        android:paddingBottom="@dimen/dp_4"
        android:text="Cancel"
        android:textColor="@color/textCountry"
        android:textSize="@dimen/sp_14"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/layout_scroll"
        app:layout_constraintTop_toBottomOf="@+id/layout_scroll" />
    <TextView
        android:id="@+id/tv_confirm"
        android:layout_width="@dimen/dp_100"
        android:gravity="center"
        android:paddingTop="@dimen/dp_4"
        android:paddingBottom="@dimen/dp_4"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="@dimen/dp_12"
        android:text="Confirm"
        android:textColor="@color/textCountry"
        android:textSize="@dimen/sp_14"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/layout_scroll"
        app:layout_constraintTop_toBottomOf="@+id/layout_scroll" />



</androidx.constraintlayout.widget.ConstraintLayout>